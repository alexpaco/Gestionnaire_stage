<h3>Modification des jours réalisés et reste à faire</h3>

<div class="well">
<h4>Nom de la tâche: {{ tache.nomTache }}</h4>
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
	{{ form_errors(form) }}
	<div class="form-group">
		{{ form_label(form.joursRealises, 'Jours réalisés', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
		{{ form_errors(form.joursRealises) }}
		<div class="col-sm-9">
			{{ form_widget(form.joursRealises) }}
		</div>
	</div>
	<div class="form-group">
		{{ form_label(form.RAF, 'Reste à faire', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
		{{ form_errors(form.RAF) }}
		<div class="col-sm-9">
			{{ form_widget(form.RAF) }}
		</div>
	</div>
	{{ form_widget(form.Modifier, {'attr': {'class': 'btn btn-primary'}}) }}

	{{ form_rest(form) }}
	{{ form_end(form) }}
</div>