{% extends 'NOGestionnaireBundle::layout.html.twig' %}

{% block body %}
	<h3 class="col-sm-offset-3">Cr√©ation d'un nouvel utilisateur</h3>
	<div class="well col-sm-6 col-sm-offset-3">
		{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
		<div class="form-group">
			{{ form_label(form.email, 'form.email', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			<div class="col-sm-9">
	    		{{ form_widget(form.email) }}
	    	</div>	
	    </div>
	    <div class="form-group">
			{{ form_label(form.username, "form.username", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			<div class="col-sm-9">
	    		{{ form_widget(form.username) }}
	    	</div>	
	    </div>
	    <div class="form-group">
			{{ form_label(form.plainPassword, 'Mot de passe', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			<div class="col-sm-9">
	    		{{ form_widget(form.plainPassword) }}
	    	</div>	
	    </div>
	    <div>
	        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
	    </div>
		{{ form_end(form) }}
	</div>
{% endblock %}